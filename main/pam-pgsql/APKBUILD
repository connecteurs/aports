# Contributor: Ludovic Muller <ludovic@connecteu.rs>
# Maintainer: Ludovic Muller <ludovic@connecteu.rs>
pkgname=pam-pgsql
pkgver=0.7.3.2
pkgrel=1
pkgdesc="PAM module to authenticate using a PostgreSQL database"
url="https://github.com/pam-pgsql/pam-pgsql"
arch="all"
license="GPL"
options="!check"  # No test suite.
makedepends="
  automake
  autoconf
  libtool

  linux-pam-dev
  postgresql-dev
  libgcrypt-dev
  bsd-compat-headers
  "
install=""
subpackages="$pkgname-doc"
source="https://github.com/pam-pgsql/pam-pgsql/archive/a49e856bd9b8f4bca863ccce5fd226fbaf425c65.zip"

builddir="$srcdir"/pam-pgsql-a49e856bd9b8f4bca863ccce5fd226fbaf425c65

build() {
  cd "$builddir"
  ./autogen.sh
  ./configure \
    --build=$CBUILD \
    --host=$CHOST \
    --prefix=/usr \
    || return 1
  make || return 1
}

package() {
  cd "$builddir"
  make DESTDIR="$pkgdir" install || return 1
}

sha512sums="abd6b8c18ddbf6de38f26a3d5cd7f2e8bdaaff487bbc988b2c9c1cb8640fb204cd7bf03e4101ab0eee8aeea24284ce82195448572871a32ffe0524ce53b0ed86  a49e856bd9b8f4bca863ccce5fd226fbaf425c65.zip"
